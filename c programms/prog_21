#include <stdio.h>
#include <stdlib.h>

int main()
{


    double r, e, p;

    int i=0;
    while (i<=1000)
    {
        printf ("Dose tin aktina: \n");
        scanf ("%lf", &r);

        e=(3.14*r*r);
        p= (2*3.14*r);

        printf("To embado einai: %lf\n", e);
        printf ("H perimetros einai: %lf\n", p);
        printf ("***********************************\n");


        i++;
    }


    return 0;


}
