#include <stdio.h>
#include <stdlib.h>

int main()
{
    int A[10];
    int min=A[0];
    int c=0;

    for (int i=0; i<=10; i++)
    {
        printf("Dose stoixio : \n");
        scanf("%d",&A[i]);
    }

    for (int i=1; i<=10; i++)
    {
        if (A[i]<min){ min=A[i];
                        c=i;}
    }

    printf("I mikroteri timi einai : %d\n",min);
    printf("i mikroteri timi briskete stin thsei : %d\n",c+1);




    return 0;
}
