#include <stdio.h>
#include <stdlib.h>

int main()
{
    double x ,f ;


	printf("Dose to x : \n");
	scanf("%lf",&x);

	if (x>=-8 && x<=-2)
	{
		f=((12*x)-4 );

	}

	else if (x==-1)
	{
		f=(123*x);
	}

	else if (x==0)
	{
		f=-1;
	}

	else if (x>1)
	{
		f=((4*x)-12);
	}

	else
	{
		printf("Eistai ektos paidioy orismou , den orizete \n");

	}

	printf("To apotelesma einai : %lf\n",f);

	return 0;
}
