#include <stdio.h>
#include <stdlib.h>



/*

xE [-8,-2]  fx=12x-4

	x=-1  fx=123x

	x=0	  fx=-1

	x>1   fx=4x-12



*/



int main()
{
    double x,f;



    printf("Dose to x : \n");
    scanf("%lf ",&x);


        if (x>=-8 && x<=-2)
            {f=(12*x)-4;}

        else if (x==-1)
            {f=(123*x);}

        else if (x==0)
            {f=-1;}

        else
            {f=((4*x)-12);}



    printf("To apotelesma einai : %lf\n",f);
    return 0;
}
