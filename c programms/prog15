#include <stdio.h>
#include <stdlib.h>

int main()
{

		int sms ,csms ;
		double m ,cm ,tc ,s ;

		printf("Dose ta sms soy : \n");
		scanf("%d",&sms);

		printf("Dose ta lepta soy : \n");
		scanf("%lf",& m);

	while (sms>=0 && m>=0){

		if (sms>1 && sms<=100)
		{
			csms=(sms*0.11)	;
		}

		else if (sms>101 && sms<=200)
		{
			csms=(sms*0.15);
		}

		else{
			csms=(sms*0.17);
		}

		if (m>1 && m<=100)
		{
			cm=(m*0.22);
		}

		else if (m>101 && m<=200)
		{
			cm=(m*0.25);
		}

		else
		{
			cm=(m*0.28);
		}


	s=(cm+csms);
	tc=(s+(s*0.24));


	printf("To synolo einai : %lf\n",tc);
	printf("*************************************\n");

		printf("Dose ta sms soy : \n");
		scanf("%d",&sms);

		printf("Dose ta lepta soy : \n");
		scanf("%lf",& m);

	}
	return 0;
}
