#include <stdio.h>
#include <stdlib.h>

int main()
{
    double a, e, p;
	int i=0;

	while(i<10){


	printf("Dose pleyra : \n ");
	scanf("%lf",&a);

	e=(a*a);
	p=(4*a);


	printf("To embadon einai :%lf\n",e);
	printf("I perimetros einai :%lf\n",p);
	printf("***************************************\n");

